@import '../../common/stylus/var.styl'

.banner-wrap
  position: relative
  swiper
    height: 200px
    swiper-item
      image
        width: 100%
        height: 100%
  .nav
    position: absolute
    right: 0
    bottom: -22px
    font-size: 0
    .link
      display: inline-block
      vertical-align: top
      margin-right: 12px
      width: 44px
      height: 44px
      background: $color-theme
      border-radius: 50%
      box-sizing: border-box
      .inner
        width: 100%
        height: 100%
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        span
          display: block
          width: 100%
          text-align: center
          font-size: 12px
          line-height: 1.2
          color: #fff
.introduction
  padding: 40px 20px
  .title-wrap
    margin-bottom: 24px
    span
      display: block
      font-weight: bold
      color: $color-theme
      &.cn
        font-size: 18px
      &.en
        font-size: 12px
  .content
    font-size: 14px
    color: $color-text
    line-height: 1.5
    p
      margin-bottom: 1em